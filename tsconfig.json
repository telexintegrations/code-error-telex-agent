{
    "compilerOptions": {
      "target": "ES2020",                          
      "module": "commonjs",                     
      "rootDir": "./src",                       
      "outDir": "./dist",                       
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
    "strictNullChecks": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  